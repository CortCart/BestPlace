@using BestPlace.Core.Models.Item
@model ItemDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<section class="clean-block clean-catalog dark">
    <div class="container">
        <div class="block-heading"></div>
        <div class="block-content">
            <div class="product-info">
                <div class="row">
                    <div class="col-md-6">
                        <div class="gallery">
                            <div id="product-preview" class="vanilla-zoom">
                                <div class="zoomed-image"></div>
                                <div class="sidebar">
                                    @foreach (var img in @Model.Images)
                                    {
                                        <img class="img-fluid d-block small-preview" id="@img.Id"
                                             src="@Url.Action("GetItemImage", "Image", new {id = @img.Id})">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info">
                            <h3>@Model.Label</h3>
                            <div class="price">
                                <h3>@Model.Price BGN</h3>
                            </div><button class="btn btn-primary" type="button"><i class="icon-basket"></i>Info for contact</button>
                            <div class="summary">
                                <p>@Model.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/details.js"></script>
