@using  BestPlace.Core.Models.Item;
@model ItemEditViewModel
@{
    ViewData["Title"] ="Edit";
    var items = (List<SelectListItem>)ViewBag.Categories;
}
@section Scripts {
    <script src="~/js/imageScript.js"></script>
    <script src="~/js/delete.js"></script>
}
<section class="clean-block clean-form dark">
    <div class="container">
        <div class="block-heading">
            <h2 class="text-info">Add item</h2>
        </div>
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="mb-3">
                <label asp-for="Label" class="form-label">Label</label>
                <input asp-for="Label" class="form-control item" type="text">
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control item" type="text">
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control item" type="text">
            </div>
          
            <div class="mb-3">
                <label  class="form-label">Select category</label>

                <select asp-for="CategoryId" asp-items="@items" class="form-control">

                </select>
            </div>
            
            <div class="mb-3">
                <label asp-for="Images" class="form-label">Images</label>
                <input asp-for="Images" type="file"  multiple="multiple" >
            </div>

            <div class="gallery">
                <div id="product-preview" class="vanilla-zoom">
                    <div class="zoomed-image">
                                <a class="btn btn-primary" id="remove" >Delete</a>
                    </div>
                    <div class="sidebar">
                        @foreach (var img in @Model.ViewImage)
                        {
                            <img class="img-fluid d-block small-preview" id="@img.Id"
                                 src="@Url.Action("GetItemImage", "Image", new {id = @img.Id})">
                        }
                    </div>
                </div>
            </div>


            <button class="btn btn-primary" type="submit">Edit</button>
        </form>
    </div>
</section>
