@using BestPlace.Core.Models.User
@model UserEditViewModel
@{
    ViewData["Title"] = "Edit";
}
<section class="clean-block clean-form dark">
    < class="container">
    <div class="block-heading">
        <h2 class="text-info">Edit user</h2>
    </div>
    <form enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">FirstName</label>
            <input asp-for="FirstName" class="form-control item" type="text">
        </div>
            
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">LastName</label>
            <input asp-for="LastName" class="form-control item" type="text">
        </div>

        <div class="mb-3">
            <label asp-for="FacebookUrl" class="form-label">Facebook</label>
            <input asp-for="FacebookUrl" class="form-control item" type="text">
        </div>
        <div class="mb-3">
            <label asp-for="InstagramUrl" class="form-label">Instagram</label>
            <input asp-for="InstagramUrl" class="form-control item" type="text">
        </div>
        
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" type="text" class="form-control item"  >
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" type="text" class="form-control item"  >
        </div>


        <div class="mb-3">
            <label asp-for="Image" class="form-label">Image</label>
            <input asp-for="Image" class="form-control item" type="file">
        </div>


        <button class="btn btn-primary" type="submit">Edit</button>
    </form>
   
</section>