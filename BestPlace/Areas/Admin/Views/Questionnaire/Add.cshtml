@using BestPlace.Core.Models;
@model QuestionnaireAddViewModel
@{
    ViewData["Title"] = "Add";
}
 <div class="full_container">
         <div class="container">
            <div class="center verticle_center full_height">
               <div class="login_section">
                  <div class="logo_login">
                     <div class="center">
                     </div>
                  </div>
                  <div class="login_form">
                      <form method="post"  >
                          <fieldset>
                              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                              <div class="field">
                                  <label class="label_field">Questionnaire name</label>
                                  <input type="text" asp-for="Name" name="name"/>
                              </div>
                              <div class="field">
                                  <label class="label_field">Questionnaire description</label>
                                  <input type="text" asp-for="Description" name="description"/>
                              </div>
                              <div class="field">
                                  <label class="label_field">Due date</label>
                                  <input type="text" asp-for="DueDate" name="DueDate"/>
                              </div>
                              <div class="field margin_0">
                                  <label class="label_field hidden">hidden label</label>
                                  <button type="submit" value="Upload" class="main_bt">Add</button>
                              </div>
                          </fieldset>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
      