@using BestPlace.Core.Models.Admin
@model QuestionnaireDetailsViewModelAsAdmin
@{
    ViewData["Title"] = "Details";
}

<div id="content">
               
               <!-- dashboard inner -->
               <div class="midde_cont">
                  <div class="container-fluid">
                     <div class="row column_title">
                        <div class="col-md-12">
                           <div class="page_title">
                              <h2>Questionnaire</h2>
                           </div>
                        </div>
                     </div>
                     <!-- row -->
                     <div class="row column1">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                           <div class="white_shd full margin_bottom_30">
                              <div class="full graph_head">
                                 <div class="heading1 margin_0">
                                    <h2>@Model.Name</h2>
                                 </div>
                              </div>
                              <div class="full price_table padding_infor_info">
                                  <div class="row"></div>
                                     <div class="col-lg-12">
                                         Description:
                                         <p>   @Model.Description</p>
                                         
                                         Answers:
                                         @foreach (var submit in @Model.Submits)
                                         {
                                             <p ><i> User Name:  </i> : <a asp-area="Admin" asp-controller="User"  asp-action="Details" asp-route-id="@submit.UserId">@submit.UserName</a> </p>
                                             <p ><i> Answer:  </i> :@submit.Answer </p>
                                             @Html.Raw("------\n")
                                         }
                                    
                                     </div>
                                 </div>
                              </div>
                           </div>
                           <div class="col-md-2"></div>
                        </div>
                        <!-- end row -->
                     </div>
                   
               </div>
            </div>