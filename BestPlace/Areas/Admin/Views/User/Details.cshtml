@using BestPlace.Core.Models.User;
@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<div id="content">
               
               <!-- dashboard inner -->
               <div class="midde_cont">
                  <div class="container-fluid">
                     <div class="row column_title">
                        <div class="col-md-12">
                           <div class="page_title">
                              <h2>User</h2>
                           </div>
                        </div>
                     </div>
                     <!-- row -->
                     <div class="row column1">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                           <div class="white_shd full margin_bottom_30">
                              <div class="full graph_head">
                                 <div class="heading1 margin_0">
                                    <h2>User info</h2>
                                 </div>
                              </div>
                              <div class="full price_table padding_infor_info">
                                 <div class="row">
                                    <!-- user profile section --> 
                                    <!-- profile image -->
                                    <div class="col-lg-12">
                                        <div class="full dis_flex center_text">
                                            <div class="profile_img">
                                                <img width="180" class="img-responsive" src="images/layout_img/user_img.jpg" alt="#"/>
                                            </div>
                                            <div class="profile_contant">
                                                <div class="contact_inner">
                                                    <h3>@Model.FirstName @Model.LastName</h3>
                                                    <ul class="list-unstyled">
                                                        <li><i class="fa fa-envelope-o"></i> : @Model.Email</li>
                                                        <li><i class="fa fa-phone"></i> : @Model.Phone</li>
                                                        <li><i class="fa  fa-home"></i> : @Model.Address</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        Deal as owner
                                                            
                                        <li>
                                            @foreach (var dealAsOwner in  @Model.DealsAsOwner)
                                            {

                                                <p class="name_user"><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@dealAsOwner.BuyerId">Buyer name: @dealAsOwner.BuyerName Proba </a> </p>
                                                <p class="msg_user"><a asp-area="Admin" asp-controller="Item" asp-action="Details" asp-route-id="@dealAsOwner.ItemId">Item name: @dealAsOwner.ItemName Proba</a></p>
                                                @Html.Raw("------\n")
                                                                      
                                            }

                                        </li>
                                        
                                        Deal as buyer
                                        <li>
                                            @foreach (var dealAsBuyer in  @Model.DealsAsBuyer)
                                            {
                                                <p class="name_user"><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@dealAsBuyer.ExOwnerId">ExOwner name: @dealAsBuyer.ExOwnerName</a> </p>
                                                <p class="msg_user"><a asp-area="Admin" asp-controller="Item" asp-action="Details" asp-route-id="@dealAsBuyer.ItemId">Item name: @dealAsBuyer.ItemName</a>.</p>
                                                @Html.Raw("------\n")
                                            }
                                        </li>
                                        Roles
                                        <li>
                                            @foreach (var role in  @Model.Roles)
                                        {
                                            <p class="name_user">@role </p>
                                            @Html.Raw("------\n")                        
                                        }
                                        --
                                        </li>
                                        
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="col-md-2"></div>
                        </div>
                        <!-- end row -->
                     </div>
                   
               </div>
            </div>