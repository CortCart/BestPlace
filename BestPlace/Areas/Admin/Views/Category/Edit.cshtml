@using BestPlace.Core.Models.Category
@model CategoryEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="full_container">
         <div class="container">
            <div class="center verticle_center full_height">
               <div class="login_section">
                  <div class="logo_login">
                     <div class="center">
                        <img width="210" src="images/logo/logo.png" alt="#" />
                     </div>
                  </div>
                  <div class="login_form">
                      <form method="post" enctype="multipart/form-data">

                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="field">
                        <label class="label_field">Category name</label>
                        <input type="text" asp-for="Name" name="name" value="@Model.Name"/>
                    </div>
                    <div class="field">
                        <label class="label_field">Add image</label>
                        <input type="file" asp-for="Image" name="Image"/>
                    </div>
                    <div class="field margin_0">
                        <label class="label_field hidden">hidden label</label>
                        <button type="submit" value="Upload" class="main_bt">Edit</button>
                    </div>
                </fieldset>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   